<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="end"
    android:layout_height="180dp">



    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/img_student_marker" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgStudent"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:civ_border_width="3.5dp"
        android:paddingTop="2dp"
        android:src="@drawable/img_user"
        app:civ_border_color="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/icon_user"
        android:layout_alignEnd="@+id/icon_user" />

    <TextView
        android:id="@+id/labNameStudent"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/marker_student_round_shape"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="ssss"
        android:layout_weight="1"
        android:layout_alignBottom="@+id/imgStudent"
        android:layout_toRightOf="@+id/imgStudent"
        android:layout_toEndOf="@+id/imgStudent"
        android:layout_marginBottom="40dp" />
</RelativeLayout>