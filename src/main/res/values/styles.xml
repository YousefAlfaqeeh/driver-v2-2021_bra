<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_header</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_dark_theme">false</item>
        <item name="md_background_color">@color/transparent</item>
        <!--<item name="android:fontFamily">@font/custom_font</item>-->
        <item name="android:textAllCaps">false</item>
        <!--<item name="fontPath">@string/font</item>-->
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>

        <!--<item name="tintMode">src_atop</item>-->
        <!--<item name="app:tabIndicatorColor">#fff</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="supportsRtl">false</item>-->
        <item name="colorPrimary">@color/color_header</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="md_background_color">@color/transparent</item>
        <item name="md_dark_theme">false</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:fontFamily">@font/custom_font</item>-->
        <!--<item name="fontPath">@string/font</item>-->
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <!--<item name="tintMode">src_atop</item>-->

    </style>


    <style name="ScaleX_Handler">
        <item name="android:scaleX">@integer/scale_x</item>
    </style>

    <style name="Gravity_LeftCenterVertical" parent="ScaleX_Handler">

        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


    <style name="Main_Buttons" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="Main_Buttons.DialogeOkButton" parent="Main_Buttons">
        <item name="android:background">@drawable/dialoge_button_selector</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@drawable/zayblack_to_white_text_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <!--<item name="android:layout_width">wrap_content</item>-->
        <item name="android:minWidth">80dp</item>
        <!--<item name="android:maxWidth">80dp</item>-->
        <item name="android:padding">8dp</item>

    </style>


    <style name="LightTextView" parent="android:TextAppearance" >

        <!--<item name="android:textStyle"></item>-->
    </style>


    <style name="BoldTextView" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>

    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <!--<item name="android:windowMinWidthMajor">80%</item>-->
        <!--<item name="android:windowMinWidthMinor">80%</item>-->
    </style>

    <style name="DialogAnimation" parent="AppTheme">
        <item name="android:windowMinWidthMajor">99%</item>
        <item name="android:windowMinWidthMinor">99%</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@anim/dialoge_in</item>
        <item name="android:windowExitAnimation">@anim/dialoge_out</item>
        <item name="md_background_color">@color/transparent</item>
        <item name="md_dark_theme">false</item>
    </style>

    <style name="DialogAnimation.right_to_left" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/dialoge_from_right</item>
        <item name="android:windowExitAnimation">@anim/dialoge_to_left</item>
        <item name="md_background_color">@color/transparent</item>
        <item name="md_dark_theme">false</item>
    </style>


    <style name="TintableImage">
        <item name="android:background">@drawable/trans_to_trans_selector_fortint</item>
        <item name="tintMode">src_atop</item>
    </style>

    <style name="TintableImage.DarkOnClick" parent="TintableImage">
        <item name="tint">@drawable/nochange_to_dark_tint_selector</item>
        <!--<item name="android:background">@drawable/trans_to_dark_selector_circle</item>-->
    </style>



    <style name="RadioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton" >
        <!--<item name="android:fontFamily">@font/custom_font</item>-->
        <!--<item name="fontPath">@string/font</item>-->
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@android:drawable/btn_radio</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>

    </style>



    <style name="CheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox" >
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

</resources>
