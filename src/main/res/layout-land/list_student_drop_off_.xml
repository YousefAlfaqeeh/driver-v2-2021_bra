<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="11">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgStudent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="7dp"
        android:src="@drawable/img_user"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_gray" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="3"
        android:gravity="start|center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/labStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Student Name"
            android:textColor="#24394A"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="7th Grade"
            android:textColor="#24394A"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>


    <TextView
        android:id="@+id/check_in_done_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/done"
        android:textColor="#1BB15A"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/absence_done_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/absence"
        android:textColor="#CF3337"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/check_in_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@drawable/check_in_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_check_in"
            android:tint="#1BB15A" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/check_in"
            android:textColor="#1BB15A"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/absent_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@drawable/absent_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_none"
            android:tint="#CF3337" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/absence"
            android:textColor="#CF3337"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>


    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#999999" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCall"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/trans_to_dark_selector"
        android:padding="18dp"
        android:src="@drawable/img_call"
        android:tint="#999999" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#999999" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgChangeLocation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/trans_to_dark_selector"
        android:padding="15dp"
        android:src="@drawable/img_change_location"
        android:tint="#999999"
        android:visibility="visible" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#999999" />


</LinearLayout>

